[flake8]
max-line-length = 127
max-complexity = 10
ignore =
    E203,  # whitespace before ':'
    E501,  # line too long, handled by black
    W503,  # line break before binary operator
exclude =
    .git,
    __pycache__,
    build,
    dist,
    .venv,
    venv,
    .tox,
    .eggs,
    *.egg,
    .mypy_cache,
    .pytest_cache,
    backend/tests/__pycache__,
    scripts/__pycache__
per-file-ignores =
    __init__.py:F401